<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column">
            </div>
            <div class="column">
                <h2 class="title">
                    forgot your password?
                </h2>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: { "data-turbo": "false", method: :post }) do |f| %>
                    <div class="field">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', placeholder: 'email' %>
                    </div>
                    <div class="actions buttons">
                        <%= f.submit "Send me reset password instructions", class: 'button' %>
                    </div>
                <% end %>
                <%= render "devise/shared/links" %>
            </div>
            <div class="column">
            </div>
        </div>
    </div>
</div>
