<section class="section">
    <div class="container">
        <h1 class="title is-2">
            subscriptions
            🎙️
        </h1>
    </div>
    <%= form_with(url: subscriptions_path, method: "GET") do |form| %>
        <%= form.text_field :query %>
        <%= form.submit 'Search', name: nil %>
    <% end %>
    <hr/>
    <div class="container">
        <% if @items.present? %>
            <% @items.each do |item| %>
                <%= render partial: 'partials/feed', locals: { item: item.feed } %>
            <% end %>
        <% else %>
            <h3>
                You don't have any subscriptions yet :/
            </h3>
        <% end %>
    </div>
    <%= render 'partials/page_navigation' %>
</section>
