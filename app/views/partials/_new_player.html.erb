 <section class="section">
 <footer class="has-text-centered is-flex-align-items-flex-end has-background-grey-dark has-text-white">
     <div id="currentlyPlaying">
     </div>
     <div class="container">
         <div class="columns is-vcentered is-flex">
             <div class="column centralAudioControl">
                 <audio
                     controls
                     id="player"
                     data-turbo-permanent
                     src="https://stream.radioparadise.com/aac-64">
                     Your browser does not support the
                     <code>audio</code> element.
                 </audio>
             </div>
             <div class="column centralAudioControl">
                 <div data-controller="audio">
                     <button class="button is-primary is-small" type="submit" data-action="click->audio#fastReverse">
                         -15s
                         <i class="fa-solid fa-backward-fast"></i>
                     </button>
                     <button class="button is-primary is-small" type="submit" data-action="click->audio#fastForward">
                         <i class="fa-solid fa-forward-fast"></i>
                         +15s
                     </button>
                 </div>
             </div>
         </div>
 </footer>
 </section>
