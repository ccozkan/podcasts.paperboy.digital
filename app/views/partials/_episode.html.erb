<br/>
<div class="row">
  <h4>
    <%= "#{item.title.html_safe}" %>
  </h4>
  <h5>
    by
    <%= link_to item.feed.name, feed_path(item.feed.slug), method: :get %>
    <%= "@ #{item.published_at.to_formatted_s(:short)}" %>
  </h5>
  <p>
    <%= item.try(:duration) %>
  </p>
      <div class="row">
          <div class="col-6 btn-group">
              <div data-controller="audio" data-audio-url-value="<%= item.audio_url %>">
                  <button data-action="click->audio#play" class="btn btn-primary">
                      <i class="fa-regular fa-circle-play"></i>
                      play
                  </button>
              </div>

              <%= button_to listen_it_later_episode_path(episode_id: item.id),class:"btn btn-light", method: :put do %>
                  <i class="fa-regular fa-clock"></i>
                  later
              <% end %>
          </div>
          <div class="col-3 btn-group">
              <%= button_to item.audio_url, target: :_blank, class: 'btn btn-success', download: "ppd_#{item.slug}" do %>
              <i class="fa-solid fa-download"></i>
              <% end %>

              <% if show_dismiss_button %>
                  <%= button_to dismiss_episode_path(episode_id: item.id), class: 'btn btn-light', data: { confirm: 'Are you sure?' }, method: :put do %>
                      dismiss
                      <i class="fa-solid fa-trash"></i>
                  <% end %>
              <% end %>
          </div>
      </div>
</div>
<br/>
<hr/>
