<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column">
                <figure class="image is-128x128">
                    <img class="is-rounded" src="<%= item.feed.pic_url %>">
                </figure>
            </div>
            <div class="column">
                <h1 class="title is-5">
                    <%= "#{item.title.html_safe}" %>
                </h1>
                <p class="subtitle">
                    by
                    <%= link_to item.feed.name, feed_path(item.feed.slug), method: :get %>
                    <%= "@ #{item.published_at.to_formatted_s(:short)}" %>
                    <%= item.try(:duration) %>
                </p>
            </div>
            <div class="column">
            </div>
                <div data-controller="audio" data-audio-url-value="<%= item.audio_url %>">
                    <div class="buttons">
                        <button data-action="click->audio#play" class="button is-primary">
                            <i class="fa-regular fa-circle-play"></i>
                            play
                        </button>

                        <%= button_to listen_it_later_episode_path(episode_id: item.id),class:"button is-info", method: :put do %>
                            <i class="fa-regular fa-clock"></i>
                            later
                        <% end %>

                        <%= button_to item.audio_url, target: :_blank, class: 'button is-success is-small', download: "ppd_#{item.slug}" do %>
                            <i class="fa-solid fa-download"></i>
                        <% end %>

                        <% if show_dismiss_button %>
                            <%= button_to dismiss_episode_path(episode_id: item.id), class: 'button is-danger is-small', data: { confirm: 'Are you sure?' }, method: :put do %>
                                dismiss
                                <i class="fa-solid fa-trash"></i>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
