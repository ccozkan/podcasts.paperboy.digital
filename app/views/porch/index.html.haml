.container
  .row.text-align-center
    .col-9
      %h1 WELCOME TO THE PORCH
      %h5 where paperboy throws your weekly episodes
      %p
      = "#{Episode.last_week_time_period[:starting_at]} -- #{Episode.last_week_time_period[:ending_at]}"
      %hr/
      %iframe{:src => "", name: 'episode_player', :style => "border:none;", :width => "100%", scrolling: 'no'}
      %hr/
  .row.justify-center
    .col-9
      - unless @items.blank?
        - @items.each_with_index do |item, index|
          %h4
            = item.title
          %h5
            = "by '#{item.feed.name}' @ #{item.published_at.to_formatted_s(:short)}"
          -# = item.summary.html_safe unless item.summary.nil?
          %h6
            -# %audio{:controls => "", :preload => "auto", :src => "#{item.audio_url}"}
            = link_to "listen", player_url(slug: item.slug), class: "btn btn-info", target: 'episode_player'
            |
            = link_to 'download', item.audio_url, target: :_blank, class: 'link-success', download: "ppd_#{item.slug}"
            %br
            %br
            = button_to "dismiss", dismiss_episode_path(episode_id: item.id), class: 'btn btn-light', method: :put
          %hr
      - else
        %p
          You don't have any new episodes yet :/
          this is might be you haven't subscribed to any feeds, or your feeds episodes haven't received yet. Checkback after next half-an-hour.
    %br/



