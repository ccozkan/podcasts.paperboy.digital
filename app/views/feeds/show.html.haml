.container
  %h2
    old episodes
  %h4
    = @feed.name
  %h5
    = @feed.provider
  %hr/

  - if @items.present?
    - @items.each do |item|
      = render partial: 'partials/episode', locals: { item: item, show_dismiss_button: false }

  - else
    .row
      .col-12
        This feed does not have any episodes :/

  .row
    .col
      = render 'partials/page_navigation'
